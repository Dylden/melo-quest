
{% extends 'user/user-base.html.twig' %}

{% block title %}Hello TrackController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

<div class="example-wrapper">
    <h1>Musiques</h1>

{% for track in tracks %}

    <p>{{ track.id }}</p>
    <p>{{ track.title }}</p>

    {% for genre in track.genres %}
        <p>{{ genre.name }}</p>
    {% endfor %}

    <p>{{ track.createdAt | date('d-m-Y') }}</p>

    <a href="{{ path('track_show', {'id': track.id}) }}" class="btn btn-primary">Play</a>


{% endfor%}

</div>
{% endblock %}
